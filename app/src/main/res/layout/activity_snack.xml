<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="kathy.electricity.SnackActivity">



    <TextView android:text="Dagens Ã„mne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        style="@android:style/TextAppearance.DeviceDefault.Large"
        android:capitalize="words"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView4" />

    <TextView android:text="@string/question1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true" />

    <TextView android:text="@string/question2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <TextView android:text="@string/question3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonSpeech"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:contentDescription="speechButton"
        android:src="@mipmap/speech_launcher"
        android:clickable="true" />



    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonBusstop"
        android:src="@mipmap/busstop_launcher"
        android:layout_alignTop="@+id/imageButtonSpeech"
        android:layout_toEndOf="@+id/imageButtonSpeech"
        android:longClickable="false" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonGreenBus"
        android:src="@mipmap/greenbus_launcher"
        android:layout_alignTop="@id/imageButtonBusstop"
        android:layout_toEndOf="@+id/imageButtonBusstop"
        android:longClickable="false" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonSettings"
        android:src="@mipmap/settings_launcher"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageButtonGreenBus"
        android:longClickable="false" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_above="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp"
        android:src="@mipmap/double_speech_launcher" />

</RelativeLayout>
