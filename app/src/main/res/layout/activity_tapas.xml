<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="kathy.electricity.TapasActivity">



    <include layout="@layout/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/include" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tapas"
        android:id="@+id/textViewTapas"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tapas är ett samlingsnamn för smårätter som härrör från Spanien, men har influenser från hela Medelhavet. Tips på bra Tapas restauranger:  Mañana! Finns på Lasarettgatan samt i Majorna,                Pinchos! Götabergsgatan 28"
        android:id="@+id/textTapasInfo"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/imageButtonSpeech"
        android:layout_toStartOf="@+id/textViewTapas"
        android:layout_below="@+id/textViewTapas"
        android:layout_alignEnd="@+id/textViewTapas" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewTapas"
        android:src="@mipmap/tapas_launcher"
        android:minHeight="@android:dimen/thumbnail_height"
        android:minWidth="@android:dimen/thumbnail_width"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textViewTapas" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewTapasText"
        android:focusable="true"
        android:minHeight="@android:dimen/thumbnail_height"
        android:minWidth="@android:dimen/thumbnail_width"
        android:src="@mipmap/tapas_text_launcher"
        android:layout_below="@+id/imageViewTapas"
        android:layout_toEndOf="@+id/textTapasInfo" />


</RelativeLayout>